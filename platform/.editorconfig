# EditorConfig - https://editorconfig.org
# WARIS Platform - Consistent coding styles across editors

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript/JavaScript
[*.{ts,tsx,js,jsx,mjs,cjs}]
indent_size = 2

# Python
[*.py]
indent_size = 4
max_line_length = 100

# JSON/YAML
[*.{json,yml,yaml}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# Makefile (requires tabs)
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_size = 2

# Docker
[Dockerfile*]
indent_size = 2

# SQL
[*.sql]
indent_size = 2

# CSS/SCSS
[*.{css,scss,sass}]
indent_size = 2
