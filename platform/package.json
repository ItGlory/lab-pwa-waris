{
  "name": "waris-platform",
  "version": "0.1.0",
  "private": true,
  "description": "WARIS - Water Loss Intelligent Analysis and Reporting System",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:api": "cd apps/api && uvicorn main:app --reload --port 8000",
    "dev:ai": "cd apps/ai && python -m uvicorn main:app --reload --port 8001"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.8.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "npm@10.9.0"
}
