# WARIS Platform Environment Variables
# Copy this file to .env and update the values

# ======================
# Application
# ======================
NODE_ENV=development
DEBUG=true

# ======================
# Database - PostgreSQL 18
# ======================
DATABASE_URL=postgresql+asyncpg://waris:waris@localhost:5432/waris

# ======================
# Database - MongoDB 8.2
# ======================
MONGODB_URL=mongodb://waris:waris@localhost:27017
MONGODB_DB_NAME=waris

# ======================
# Database - Redis 8
# ======================
REDIS_URL=redis://localhost:6379

# ======================
# Vector Database - Milvus 2.6
# ======================
MILVUS_HOST=localhost
MILVUS_PORT=19530

# ======================
# LLM Configuration
# ======================
LLM_SERVER_URL=http://localhost:11434
LLM_MODEL_NAME=openthaigpt-r1

# ======================
# DMAMA Integration
# ======================
DMAMA_API_URL=https://dmama.pwa.co.th/api
DMAMA_API_KEY=your-api-key-here

# ======================
# Security
# ======================
SECRET_KEY=change-this-to-a-secure-random-string
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ======================
# Frontend
# ======================
NEXT_PUBLIC_API_URL=http://localhost:8000

# ======================
# MLflow
# ======================
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=waris-water-loss
